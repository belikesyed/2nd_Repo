<?xml version="1.0"?>
<block>
  <name>add</name>
  <key>operation_add</key>
  <category>operation</category>
  <import>import gnuradio.operation</import>
  <make>gnuradio.operation.add()</make>
    <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in0</name>
    <type>float</type>
  </sink>
   <sink>
    <name>in1</name>
    <type>float</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>float</type>
  </source>
</block>
